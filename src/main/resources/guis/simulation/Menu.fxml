<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.input.*?>
<MenuBar nodeOrientation="LEFT_TO_RIGHT" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="guis.simulation.controller.MenuController">
    <menus>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem disable="true" mnemonicParsing="false" onAction="#open" text="Open...">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="O" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                    </accelerator>
                </MenuItem>
                <MenuItem fx:id="saveMap_" disable="true" mnemonicParsing="false" onAction="#save" text="Save">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                    </accelerator>
                </MenuItem>
                <MenuItem disable="true" mnemonicParsing="false" onAction="#saveAs" text="Save As...">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="UP" meta="UP" shift="DOWN" shortcut="DOWN" />
                    </accelerator>
                </MenuItem>
                <MenuItem mnemonicParsing="false" onAction="#importAoSE" text="Import ...">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="I" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
                    </accelerator>
                </MenuItem>
            </items>
        </Menu>
      <Menu mnemonicParsing="false" text="Simulation">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#restartSimulation" text="Restart">
               <accelerator>
                  <KeyCodeCombination alt="UP" code="R" control="UP" meta="UP" shift="UP" shortcut="DOWN" />
               </accelerator>
            </MenuItem>
         </items>
      </Menu>
    </menus>
</MenuBar>
